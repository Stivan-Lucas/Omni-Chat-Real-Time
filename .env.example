# ======== APP CONFIG ========
HOST=127.0.0.1
PORT=3006
NODE_ENV=development
APP_NAME=OmniNexus
APP_VERSION=0.1.0

# ======== CORS CONFIG ========
CORS_ORIGIN=*

# ======== DATABASE CONFIG (Postgres) ========
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=omni_development
POSTGRES_HOST=localhost
POSTGRES_PORT=3007

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ======== REDIS CONFIG ========
REDIS_HOST=localhost
REDIS_PORT=3008
REDIS_PASSWORD=dev_redis_password

# ======== FILE UPLOAD CONFIG ========
MAX_FILE_SIZE=10485760 # 10 MB in bytes

# ======== LOGGING CONFIG ========
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_PRETTY_COLORIZE=false
LOG_PRETTY_TRANSLATE_TIME=SYS:yyyy-mm-dd HH:MM:ss
LOG_PRETTY_IGNORE=pid,hostname
LOG_PRETTY_SINGLE_LINE=true
LOG_FILE_MAX_DAYS=7
LOG_FILE_ZIPPED=true
LOG_REDACT_PATHS=req.headers.authorization,req.headers.cookie,req.headers["x-api-key"],*.password

# ======== JWT CONFIG ========
JWT_SECRET=1234
JWT_EXPIRES_IN=7d
REFRESH_SECRET=1234
REFRESH_EXPIRES_IN=14d

# ======== RATE LIMIT CONFIG ========
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BAN=10
RATE_LIMIT_CACHE=50000
RATE_LIMIT_NAMESPACE=omni-dev-rate-limit-
RATE_LIMIT_INFO_MESSAGE=Rate limiting is disabled in development

# ======== SEND EMAIL CONFIG ========
EMAIL_API_KEY=1234
EMAIL_FROM=seu@melhor.email
EMAIL_SEND_TYPE=outbound
