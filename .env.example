# ======== APP CONFIG ========
HOST=0.0.0.0
PORT=8080
NODE_ENV=production
APP_NAME=LEXIS
APP_VERSION=1.0.0

# ======== CORS CONFIG ========
CORS_ORIGIN=https://meu-dominio.com

# ======== DATABASE CONFIG (Postgres) ========
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=prod_password
POSTGRES_DB=lexis_production
POSTGRES_HOST=prod-db-host
POSTGRES_PORT=5432

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ======== REDIS CONFIG ========
REDIS_HOST=prod-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=prod_redis_password

# ======== FILE UPLOAD CONFIG ========
MAX_FILE_SIZE=10485760 # 10 MB in bytes

# ======== LOGGING CONFIG ========
LOG_LEVEL=info
LOG_DIR=/var/log/lexis
LOG_PRETTY_COLORIZE=false
LOG_PRETTY_TRANSLATE_TIME=SYS:yyyy-mm-dd HH:MM:ss
LOG_PRETTY_IGNORE=pid,hostname
LOG_PRETTY_SINGLE_LINE=true
LOG_FILE_MAX_DAYS=30
LOG_FILE_ZIPPED=true
LOG_REDACT_PATHS=req.headers.authorization,req.headers.cookie,req.headers["x-api-key"],*.password

# ======== JWT CONFIG ========
JWT_SECRET=coloque_uma_chave_secreta_super_segura_aqui
JWT_EXPIRES_ON=7d

# ======== RATE LIMIT CONFIG ========
RATE_LIMIT_MAX=500
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BAN=10
RATE_LIMIT_CACHE=50000
RATE_LIMIT_NAMESPACE=lexis-prod-rate-limit-
RATE_LIMIT_INFO_MESSAGE=Rate limiting is disabled in production
