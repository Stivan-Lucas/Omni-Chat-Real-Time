{
  "name": "omninexus_server",
  "version": "0.1.0",
  "description": "Omni Nexus real-time chat with a focus on security and scalability!",
  "license": "MIT",
  "author": "Stivan Lucas C",
  "type": "module",
  "main": "dist/server.js",
  "keywords": [
    "chat",
    "real-time",
    "omni-nexus",
    "messaging",
    "secure-chat",
    "scalable",
    "typescript",
    "nodejs",
    "websocket",
    "realtime-communication",
    "instant-messaging",
    "chat-server"
  ],
  "homepage": "https://github.com/Stivan-Lucas/Omni-Chat-Real-Time#readme",
  "bugs": {
    "url": "https://github.com/Stivan-Lucas/Omni-Chat-Real-Time/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stivan-Lucas/Omni-Chat-Real-Time.git"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "rm -rf ./dist && tsc -p tsconfig.json && esbuild ./dist/**/*.js --minify --outdir=./dist --allow-overwrite",
    "lint": "eslint ./src --ext .js,.ts,.mjs,.cjs --report-unused-disable-directives --max-warnings 0",
    "format": "prettier ./src --check && prettier ./src --write",
    "format:check": "npx prettier ./src --check",
    "test": "dotenvx run -f .env.test -- sh -c \"prisma migrate reset --force && prisma generate && vitest\"",
    "test:watch": "dotenvx run -f .env.test -- sh -c \"prisma generate && prisma migrate deploy && vitest --watch\"",
    "test:reset": "dotenvx run -f .env.test -- prisma migrate reset --force",
    "test:coverage": "dotenvx run -f .env.test -- vitest run --coverage",
    "test:coverage:html": "vitest run --coverage --reporter=html",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier ./src --write --ignore-unknown"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.48.4",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@prisma/client": "^6.14.0",
    "@scalar/fastify-api-reference": "^1.34.2",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.9.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tsconfig/node-ts": "^23.6.1",
    "@tsconfig/node24": "^24.0.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.5",
    "pino-pretty": "^13.1.1",
    "prettier": "3.6.2",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  }
}
